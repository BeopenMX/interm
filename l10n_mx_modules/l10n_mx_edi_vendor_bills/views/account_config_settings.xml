<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_config_settings_fuel_codes" model="ir.ui.view">
        <field name="name">view_account_config_settings_fuel_codes</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='bank_cash']" position="after">
                <h2>Fuel Codes</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box" groups="account.group_account_user">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Fuel SAT Codes</span>
                            <div class="text-muted">
                                Configure the fuel SAT Codes.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <field name="l10n_mx_edi_fuel_code_sat_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
